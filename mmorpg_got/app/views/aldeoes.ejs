<div id="aldecoes">					
	<h3>Aldeões</h3>
	
	<form class="form-cadastro" action="/ordenar_acao_sudito" method="post">

		<div class="row">
			<div class="col-xs-5">
				<div class="form-group">
					<select class="form-control" name="acao">
						<option value="">-- Escolha a ação</option>
						<option value="1">Coletar recursos (2 Gold e 1 Hour)</option>
						<option value="2">Enforcar aldeão (3 Gold e 2 Hour)</option>
						<option value="3">Ensinar história (1 Gold e 5 Hour)</option>
						<option value="4">Ensinar magia ( 1 Gold e 5 Hour)</option>
					</select>										
				</div>
			</div>
			
			<div class="col-xs-3">
				<div class="form-group">
					<input type="number" class="form-control" name="quantidade" id="quantidade" placeholder="Quantidade">
				</div>
			</div>
			
			<div class="col-xs-4">
				<div class="form-group row">
					<button type="submit" class="btn btn-primary">Ordenar</button>
				</div>
			</div>
			
		</div>
		
		<hr />
		<div class="row">
			<div class="col-xs-12">
			</div>
		</div>
	</form>
</div>